             xmlns:eb="clr-namespace:Prism_App.Behaviors"
             x:Class="Prism_App.Views.MainPage"
             xmlns:prism="http://prismlibrary.com"
             Title="{Binding Title}">

    <StackLayout BackgroundColor="#e8e8e8">
